<%- include('partials/header') %>
<div class="display-1 mx-auto text-center">Products</div>
<div class="container mt-4">
    <div class="row">
        <% var i = 0; %>
        <% products.forEach(function(product) { %>
            <div class="col-md-4 my-4 mx-auto text-center ">
                <a href="/products/<%= product._id %>"><img src="<%= product.image %>" class="img-thumbnail shadow"></a>
                    <div class="mx-auto text-center my-1">
                        <p class="text-capitalize text-center font-italic font-weight-normal m-1"><%= product.name %></p>
                        <p class="text-capitalize text-center font-italic font-weight-light m-1">Rs. <%= product.price.toLocaleString() %></p>
                    </div>
            </div>
            <% i = i + 1; %>
            <% if(i == 3) { %>
                <% i = 0; %>
                <div class="w-100 my-1"></div>        
            <% } %>
        <% }); %>
    </div>
</div>

<%- include('partials/footer') %>